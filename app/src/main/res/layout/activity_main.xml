<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Purple_dark"
    android:gravity="center_horizontal"
    android:paddingTop="50dp"
    android:paddingHorizontal="12dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/Purple_dark"
        app:cardCornerRadius="100dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dev_ico_no_bg"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico_regular"
        android:text="@string/full_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/devTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.12"
        android:text="@string/dev_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/phoneTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/Purple_dark"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:text="@string/phone"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_call" />

    <TextView
        android:id="@+id/emailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/Purple_dark"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:text="@string/email"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_email" />

    <TextView
        android:id="@+id/githubTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/Purple_dark"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:text="@string/githubLink"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:drawableTint="@color/white"
        app:drawableStartCompat="@drawable/github_logo" />

</LinearLayout>